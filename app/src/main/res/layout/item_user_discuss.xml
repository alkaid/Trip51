<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListViewItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgShopThumb"
        style="@style/ListViewShopImage"
        android:src="@drawable/temp_shop_thumb" />

    <LinearLayout
        style="@style/ListViewArticleLay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextViewTitle2.centerVertical"
                android:text="和太郎寿司" />

            <TextView
                style="@style/TextViewArticle.Gray.centerVertical"
                android:layout_alignParentRight="true"
                android:text="2015-9-12"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextViewArticle"
                    android:text="综合评价" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/star_thumb_fav" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/star_thumb_fav" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/star_thumb_fav" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/star_thumb_fav" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/star_thumb_unfav" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                style="@style/TextViewArticle"
                android:text="环境4分" />

            <TextView
                style="@style/TextViewArticle"
                android:layout_marginLeft="5dp"
                android:text="口味4分" />

            <TextView
                style="@style/TextViewArticle"
                android:layout_marginLeft="5dp"
                android:text="服务4分" />
        </LinearLayout>

        <TextView
            style="@style/TextViewArticle"
            android:layout_marginTop="15dp"
            android:text="这家餐厅还可以，服务周到，环境优雅，是个约会的好地方....." />
    </LinearLayout>
</LinearLayout>