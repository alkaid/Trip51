<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:paddingBottom="6dp" android:layout_marginTop="6dp" android:padding="5dp">
        <ImageView android:id="@+id/ivItemIcon" android:src="@drawable/user_icon_fav" android:layout_width="22dp" android:layout_height="wrap_content"  android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/ivArrow" android:src="@drawable/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:visibility="visible"/>
        <TextView android:id="@+id/tvItemName" android:layout_width="100dp" android:layout_height="wrap_content" android:text="我的收藏"
            android:layout_toRightOf="@+id/ivItemIcon" android:textSize="19sp" android:layout_marginLeft="20dp" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>