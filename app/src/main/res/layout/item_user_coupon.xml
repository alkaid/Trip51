<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListViewItem"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCouponThumb"
            style="@style/ListViewShopImage"
            android:src="@drawable/temp_coupon_iv" />

        <TextView
            style="@style/TextViewArticle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="￥ 30" />
    </LinearLayout>

    <LinearLayout
        style="@style/ListViewArticleLay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextViewTitle2.centerVertical"
                android:text="使用规则" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextViewArticle"
                android:text="1.适用于预定消费，不可提现" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                style="@style/TextViewArticle"
                android:text="有效期：2015.08.31-2015.11.30" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>