    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/navigation_list_id"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/menu_navigator_background_color"></ListView>

    <ListView
        android:id="@+id/content_list_id"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="7"></ListView>


</LinearLayout>
