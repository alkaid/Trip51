<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coodOper="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/white_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_menu_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:src="@drawable/temp_shop_thumb" />

    <LinearLayout
        android:id="@+id/ll_menu_food_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menu_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_1"
            android:text="鸳鸯火锅"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_menu_food_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_3"
            android:text="已售:0份"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_menu_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_3"
                android:text="0.01元"/>

            <com.alkaid.trip51.widget.Operator
                android:id="@+id/op_food_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                coodOper:colorStyle="orange"
                coodOper:opMaxCount="100"
                coodOper:opMinCount="0" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
