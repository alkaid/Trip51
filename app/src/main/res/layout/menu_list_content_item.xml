<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coodOper="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@color/white_background">

    <ImageView
        android:id="@+id/iv_menu_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:src="@drawable/temp_shop_thumb" />

    <LinearLayout
        android:id="@+id/ll_menu_food_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menu_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_menu_food_count"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_title_3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_menu_food_price"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_title_3"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:layout_gravity="bottom">
        <com.alkaid.trip51.widget.Operator
            android:id="@+id/op_food_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            coodOper:opMaxCount="100"
            coodOper:opMinCount="1"
            coodOper:colorStyle="orange"/>
    </LinearLayout>


</LinearLayout>
