<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" style="@style/ListViewItem">
    <ImageView android:id="@+id/imgShopThumb" android:src="@drawable/temp_shop_thumb" style="@style/ListViewShopImage"/>
    <LinearLayout android:orientation="vertical" style="@style/ListViewArticleLay">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="和太郎寿司" style="@style/TextViewTitle2.centerVertical"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:src="@drawable/temp_flag_hui"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_thumb_fav" android:layout_marginRight="0dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_thumb_fav" android:layout_marginRight="0dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_thumb_fav" android:layout_marginRight="0dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_thumb_fav" android:layout_marginRight="0dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_thumb_unfav" android:layout_marginRight="0dp"/>
            </LinearLayout>
            <TextView android:layout_alignParentRight="true" android:text="人均：￥100-150" style="@style/TextViewArticle.Gray"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp">
            <TextView android:text="包房（" style="@style/TextViewArticle"/>
            <TextView android:text="紧张" style="@style/TextViewArticle" android:textColor="@color/red"/>
            <TextView android:text=")       大厅（" style="@style/TextViewArticle"/>
            <TextView android:text="空闲" style="@style/TextViewArticle" android:textColor="@color/hotel_booking_green"/>
            <TextView android:text="）" style="@style/TextViewArticle"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:text="潍安路沿线 日本料理" style="@style/TextViewArticle"/>
            <TextView android:text="600m" android:layout_alignParentRight="true" style="@style/TextViewArticle"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>